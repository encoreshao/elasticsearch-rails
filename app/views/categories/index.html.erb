<p id="notice"><%= notice %></p>

<h1>
  Categories
  <small class='float-right'>
    <%= link_to 'New Category', new_category_path, class: 'btn btn-outline-info' %>
  </small>
</h1>

<table class='table table-bordered'>
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.title %></td>
        <td>
          <div class='float-right'>
            <%= link_to 'Show', category, class: 'btn btn-outline-info' %>
            <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-outline-info' %>
            <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-info' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<nav aria-label="pagination">
  <%= paginate @categories %>
</nav>
